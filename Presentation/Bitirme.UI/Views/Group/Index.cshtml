@model List<Bitirme.Domain.Entities.Groups>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
    <h2>Groups Table</h2>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Group Name</th>
                <th>Creator User ID</th>
                <th>Creation Date</th>
                <th>Group Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>@group.Id</td>
                    <td>@group.GroupName</td>
                    <td>@group.CreatorUserID</td>
                    <td>@group.CreationDate</td>
                    <td>@group.GroupDescription</td>
                    <td>
                        <button class="btn btn-primary join-group-btn" data-group-id="@group.Id">Join</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.min.js"></script>

<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/chatHub")
        .configureLogging(signalR.LogLevel.Information)
        .build();

    connection.start().then(function () {
        console.log("SignalR Connected!");
    }).catch(function (err) {
        return console.error(err.toString());
    });

    document.querySelectorAll('.join-group-btn').forEach(button => {
        button.addEventListener('click', async () => {
            const groupId = button.getAttribute('data-group-id');
            await connection.invoke('JoinGroup', groupId);
        });
    });
</script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>