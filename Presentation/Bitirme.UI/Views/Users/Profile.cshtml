@model Bitirme.UI.Models.UsersModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Sayfası</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="~/resimler/user/@Model.ImagePath" alt="Profile Picture" class="img-thumbnail mb-3" style="width: 150px; height: 150px;">
                        <h4 class="card-title">@Model.Name @Model.SurName</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Profil Bilgileri</h5>
                        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                        <p class="card-text"><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
                        <a href="@Url.Action("UpdateProfile", "Users")" class="btn btn-primary">Profili Güncelle</a>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Ana Sayfa</a>
            </div>
           
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>