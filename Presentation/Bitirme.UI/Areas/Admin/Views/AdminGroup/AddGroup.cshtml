@model Bitirme.UI.Areas.Admin.Models.GroupModel
@{
    ViewData["Title"] = "AddGroup";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })

                <div class="form-group">
                    <label>>Ad</label>
                    <input type="text" class="form-control" name="GroupName" />
                    @Html.ValidationMessageFor(x => x.GroupName, "", new { style = "color:red" })
                </div>
                <div class="form-group">
                    <label>>Açıklama</label>
                    <input type="text" class="form-control" name="GroupDescription" />
                    @Html.ValidationMessageFor(x => x.GroupDescription, "", new { style = "color:red" })
                </div>
                <br />
                <button class="btn btn-primary" type="submit">Ekle</button>
            </form>
        </div>
    </div>
</div>