@model List<Bitirme.Domain.Entities.Groups>
@{
    ViewData["Title"] = "ListGroup";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/Admin/AdminGroup/AddGroup">Group Ekle</a>
<br />
<br />
<table class="table table-bordered" id="table">
    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Oluşturulma Tarihi</th>
        <th>Oluşturan</th>
        <th>Sil</th>
        <th>Güncelleme</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GroupName</td>
            <td>@item.GroupDescription</td>
            <td>@item.CreationDate</td>
            <td>@item.CreatorUserID</td>
            <td>@Html.ActionLink("Sil", "Delete", "AdminGroup", new { id = item.Id },new {@class="btn btn-danger",onclick="return confirm ('silmek istiyormsunuz?')"})</td>
            <td><a class="btn btn-primary" href="/Admin/AdminGroup/Update/@item.Id">Güncelleme</a></td>
        </tr>
    }
</table>

